# Confluence Downloader Configuration

# Base URL of your Confluence instance
CONFLUENCE_BASE_URL=https://confluence.sr.se

# Space key to download
CONFLUENCE_SPACE_KEY=ABC

# Authentication (optional - will prompt if not provided)
# You can set these environment variables to avoid prompting
# CONFLUENCE_USERNAME=your.email@sr.se
# CONFLUENCE_API_TOKEN=your_api_token

# Rate limiting (seconds between requests)
REQUEST_DELAY=0.5

# Output settings
INCLUDE_HTML=true
INCLUDE_PLAIN_TEXT=true
MAX_FILENAME_LENGTH=100
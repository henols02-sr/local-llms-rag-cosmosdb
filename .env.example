# Confluence Downloader Configuration

# Base URL of your Confluence instance
CONFLUENCE_BASE_URL=https://confluence.sr.se

# Space keys to download (multiple spaces are now hardcoded in the script)
# Examples: ABC, ITS (large!), DC, CHEF
CONFLUENCE_SPACE_KEYS=ABC,DC,CHEF

# Authentication (optional - will prompt if not provided)
# You can set this environment variable to avoid prompting
# CONFLUENCE_API_TOKEN=your_bearer_token

# Rate limiting (seconds between requests - integer, defaults to 0 if not set)
REQUEST_DELAY=0.5

# Output settings
INCLUDE_HTML=true
INCLUDE_PLAIN_TEXT=true
MAX_FILENAME_LENGTH=100